<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/main_together_choice"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/home_add"
        android:layout_weight="1" />

    <Button
        android:id="@+id/main_together_voice"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:background="@drawable/home_voice"
        android:layout_marginRight="10dp"
        android:text="找个朋友过节" />

    <Button
        android:id="@+id/main_together_map"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/it_button"
        android:text="看看TA" />

</LinearLayout>