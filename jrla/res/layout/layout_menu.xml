<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dip"
    android:layout_height="fill_parent"
    android:background="@color/menucolor"
    android:orientation="vertical" >

 <RelativeLayout
     android:id="@+id/rl_menu_id"
     android:layout_width="240dip"
     android:layout_height="100.0dip"
     android:background="@drawable/selector_category_item"
     android:orientation="horizontal" >
  
   <TextView
        android:id="@+id/tv_menu_id"
        android:text="请登录" 
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/ic_top_bar_user_id"
        android:gravity="center_vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:textColor="#ff959595"
        android:textSize="22.0sp" />
   
    </RelativeLayout>
    
    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_menu_center"
        android:layout_width="240dip"
        android:layout_height="50.0dip"
        android:background="@drawable/selector_category_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_category_mark"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="我的中心"
        android:textColor="#ff959595"
        android:textSize="16.0sp" />

    
    
    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@color/white" />
    
    
      <TextView
        android:id="@+id/tv_menu_setting"
        android:layout_width="240dip"
        android:layout_height="50.0dip"
        android:background="@drawable/selector_category_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_category_mark"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="设置"
        android:textColor="#ff959595"
        android:textSize="16.0sp" />
    
    
    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_menu_about_us"
        android:layout_width="240dip"
        android:layout_height="50.0dip"
        android:background="@drawable/selector_category_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_category_mark"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="关于我们"
        android:textColor="#ff959595"
        android:textSize="16.0sp" />

    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tv_menu_exit"
        android:layout_width="240dip"
        android:layout_height="50.0dip"
        android:background="@drawable/selector_category_item"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_category_mark"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="退出登录"
        android:textColor="#ff959595"
        android:textSize="16.0sp" />

    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@color/white" />
    
      <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/menucolor" />

</LinearLayout>