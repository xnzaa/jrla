<?xml version="1.0" encoding="UTF-8"?>
<com.jrla.widget.explain_item xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dp="http://schemas.android.com/apk/res/com.df.dianping"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item"
    android:gravity="center_vertical"
    android:minHeight="?android:listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingBottom="8.0dip"
    android:paddingTop="8.0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.0dip"
        android:orientation="vertical"
        android:paddingRight="4.0dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:paddingRight="4.0dip" >

            <TextView
                android:id="@+id/explain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="25sp"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/explain_date"
                android:layout_toRightOf="@id/explain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="20sp"
                android:textColor="#ff000000" />
			<TextView
                android:id="@+id/explain_hide"
                android:layout_toRightOf="@id/explain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000" />
            <!-- <Button
                android:id="@+id/bn_explain_favorite"
                android:focusable="false"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏" /> -->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/explain_othername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:singleLine="true"
                android:textColor="#ff000000"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/explain_others"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#ff000000"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

</com.jrla.widget.explain_item>